# program to find get the maximum of three numbers using function

def max_three(a, b, c):
    if a >= b and a >= c:
        return a
    elif b >= c and b >= a:
        return b
    else:
        return c


num_1 = float(input("enter first number"))
num_2 = float(input("enter second number"))
num_3 = float(input("enter third number"))
largest_num = max_three(num_1,num_2,num_3)
print(largest_num, 'is the largest number')
